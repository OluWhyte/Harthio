# Harthio Development Environment
# Copy this to .env.local for local development

# Development Supabase Project
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_DEV_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_dev_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key_here

# Local Development URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Email (Resend test mode)
RESEND_API_KEY=your_dev_resend_key_here
EMAIL_FROM_ADDRESS=Harthio Dev <dev@harthio.com>

# WebRTC TURN Configuration (can share with prod or use separate)
NEXT_PUBLIC_METERED_DOMAIN=your-domain.metered.live
METERED_API_KEY=your_metered_api_key_here

# Development Mode
NODE_ENV=development

# Optional: Development-specific features
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
