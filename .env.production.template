# Production Supabase Project
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROD_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_prod_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_prod_service_role_key_here

# Production Domain
NEXT_PUBLIC_APP_URL=https://harthio.com

# Production Email
RESEND_API_KEY=your_prod_resend_key_here
EMAIL_FROM_ADDRESS=Harthio <no-reply@harthio.com>

# WebRTC TURN Configuration
NEXT_PUBLIC_METERED_DOMAIN=your-domain.metered.live
